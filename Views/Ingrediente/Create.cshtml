@model lanchonete.DTOs.IngredienteDto

@{
    ViewData["Title"] = "Adicionar Ingrediente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Adicionar Novo Ingrediente</h2>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Digite o nome do ingrediente" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Price" class="form-label fw-bold"></label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Digite o preço" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100">Adicionar Ingrediente</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Voltar para Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
