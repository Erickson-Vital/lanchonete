@model IEnumerable<lanchonete.Models.Ingrediente>

@{
    ViewData["Title"] = "Lista de Ingredientes";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Lista de Ingredientes</h2>
        <a asp-action="Create" class="btn btn-success">Adicionar Novo Ingrediente</a>
    </div>

    <div class="card shadow-lg p-4">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">R$ @item.Price.ToString("F2")</td>
                        <td class="text-center align-middle">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
